# MongoDB Atlas Connection (REQUIRED)
MONGODB_URI=your_mongodb_atlas_connection_string

# JWT Secret (REQUIRED - Use a strong random string)
JWT_SECRET=your_secure_jwt_secret_here

# Image Upload Service (REQUIRED for image uploads)
# Get your API key from https://api.imgbb.com/
IMGBB_API_KEY=your_imgbb_api_key_here

# Email Service - Gmail (Default)
EMAIL_USER=campuszon@gmail.com
EMAIL_PASS=your_gmail_app_password

# Email Service - Alternative Providers (Optional - if set, these take priority over Gmail)
# Resend (https://resend.com)
RESEND_API_KEY=your_resend_api_key_here

# Brevo (formerly Sendinblue) (https://www.brevo.com)
BREVO_API_KEY=your_brevo_api_key_here
BREVO_EMAIL=your_verified_sender_email@example.com

# SendGrid (https://sendgrid.com)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email FROM address (used by alternative providers)
EMAIL_FROM=noreply@campuskart.com

# Google OAuth (REQUIRED for Google login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://your-backend-app.onrender.com/api/auth/google/callback

# Frontend URL (REQUIRED for CORS and OAuth redirects)
FRONTEND_URL=https://your-frontend-app.vercel.app

# Server Port
PORT=5000
